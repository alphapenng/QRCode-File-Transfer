  "main": "src/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build && electron-builder",
    "build:vite": "vite build",
    "build:electron": "electron-builder",
    "build:dir": "vite build && electron-builder --dir",
    "build:win": "vite build && electron-builder --win",
    "preview": "vite preview",
    "start": "electron .",
    "clean": "rimraf dist out",
    "lint": "echo \"Linting will be configured later\"",
    "test": "echo \"Tests will be configured in task 1.6.1\""
